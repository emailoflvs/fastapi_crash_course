{
  // Use the Python interpreter from the virtual environment
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

  // Use Pylance for fast and intelligent code analysis
  "python.languageServer": "Pylance",

  // Enable auto-import suggestions (e.g., "Optional" from "typing")
  "python.analysis.autoImportCompletions": true,

  // Show documentation on hover, including AI/ML libraries
  "python.analysis.typeCheckingMode": "basic",

  // Automatically format code on save using Black
  "python.formatting.provider": "black",
  "editor.formatOnSave": true,

  // Black configuration: limit line length to 79 chars (PEP8)
  "python.formatting.blackArgs": [
    "--line-length=79"
  ],

  // Organize imports automatically on save and fix issues
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },

  // Enable linting with Flake8
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.lintOnSave": true,

  // Enable Mypy type checking
  "python.linting.mypyEnabled": true,
  "python.linting.mypyArgs": [
    "--ignore-missing-imports",
    "--strict"
  ],

  // Enable Jupyter notebooks and IPython support
  "jupyter.jupyterServerType": "local",

  // Enable AI-powered IntelliCode completions
  "editor.suggestSelection": "first",
  "editor.suggest.snippetsPreventQuickSuggestions": false,

  // Allow extension recommendations per project
  "extensions.ignoreRecommendations": false,

  // Auto-detect imports across the entire workspace
  "python.analysis.indexing": true,

  // Enable IntelliSense in .ipynb, .py, .pyi, etc.
  "python.analysis.diagnosticMode": "workspace",

  // Default integrated terminal to bash
  "terminal.integrated.defaultProfile.linux": "bash"
}
